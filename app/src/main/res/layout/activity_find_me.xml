<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".features.findme.FindMeActivity">

    <ImageView
        android:id="@+id/map_pic"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:background="?android:attr/colorBackground"
        android:contentDescription="@string/map_logo"
        map:srcCompat="@drawable/ic_map"
        map:tint="@color/primary" />

    <TextView
        android:id="@+id/my_location_string"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:background="?android:attr/colorBackground"
        android:ems="10"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="@string/my_location_label_text"
        android:textColor="@color/primary"
        android:textSize="40sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        android:layout_weight="70" />

</LinearLayout>


